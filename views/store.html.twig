<html>
  <head>
    <title>Shoe Store</title>
  </head>
  <body>

    <h1>{{ store.getName }} </h1>

    {% if brands is not empty%}
      <p> Here are the brands sold at this store:</p>
      <ul>
          {% for brand in brands %}
            <li> {{ brand.getType }} </li>

          {% endfor %}
      </ul>
      {% else %}
          <p> This store sells no brands</p>

      {% endif %}

    <h4>Add a brand to this store: </h4>

    <form action='/add_brands'method ='post'>
        <input id = "store_id" name = "store_id" type = "hidden" value = "{{ store.getId}}">
        <label for = "brand_id"> Select a Brand </label>
        <select id = 'brand_id' name = 'brand_id' type = 'text'>
          {% for brand in all_brands %}
            <option value = "{{ brand.getId}}"> {{ brand.getType }} </option>
          {% endfor %}
        </select>
        <button type = 'submit'> Add Brand</button>
      </form>

      <p><a href="/stores/{{ store.getId }}/edit"> Edit this store</a></p>


      <p><a href = '/'> Home </a> </p>



  </body>
</html>
