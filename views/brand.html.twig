<html>
  <head>
    <title>Shoe Brand</title>
  </head>
  <body>

    <h1>{{ brand.getType }} </h1>

    {% if stores is not empty%}
      <p> Here are the stores for this brand:</p>
      <ul>
          {% for store in stores %}
            <li> {{ store.getName }} </li>

          {% endfor %}
      </ul>

      {% endif %}

    <h4>Add a store to this brand: </h4>

    <form action='/add_stores'method ='post'>
        <input id = "brand_id" name = "brand_id" type = "hidden" value = "{{ brand.getId}}">
        <label for = "store_id"> Select a Store </label>
        <select id = 'store_id' name = 'store_id' type = 'text'>
          {% for store in all_stores %}
            <option value = "{{ store.getId}}"> {{ store.getName }} </option>
          {% endfor %}
        </select>
        <button type = 'submit'> Add Store</button>
      </form>

      <p><a href = "/brands/{{ brand.getId }}/edit"> Edit this brand</a></p>

      <p><a href = '/'> Home </a> </p>



  </body>
</html>
